
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

    @section Styles {
        <link href="~/css/Site/Style.css" rel="stylesheet" type="text/css" />
        <img src="~/images/Login/images/icons/favicon.ico" />
        <link href="~/css/Login/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/css/Login/fonts/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
        <link href="~/css/Login/vendor/animate/animate.css" rel="stylesheet" />
        <link href="~/css/Login/vendor/css-hamburgers/hamburgers.css" rel="stylesheet" />
        <link href="~/css/Login/vendor/animsition/css/animsition.css" rel="stylesheet" />
        <link href="~/css/Login/vendor/select2/select2.css" rel="stylesheet" />
        <link href="~/css/Login/vendor/daterangepicker/daterangepicker.css" rel="stylesheet" />
        <link href="~/css/Login/css/main.css" rel="stylesheet" />
        <link href="~/css/Login/css/util.css" rel="stylesheet" />
    }

    @section Scripts {
        <script src="~/css/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
        <script src="~/css/Login/vendor/animsition/js/animsition.js"></script>
        <script src="~/css/Login/vendor/bootstrap/js/popper.js"></script>
        <script src="~/css/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/css/Login/vendor/select2/select2.min.js"></script>
        <script src="~/css/Login/vendor/daterangepicker/moment.min.js"></script>
        <script src="~/css/Login/vendor/daterangepicker/daterangepicker.js"></script>
        <script src="~/css/Login/vendor/countdowntime/countdowntime.js"></script>
        <script src="~/js/Login/main.js"></script>
    }
}


<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form class="login100-form validate-form p-l-55 p-r-55 p-t-178">
                <span class="login100-form-title">
                    Entrar
                </span>

                <div class="wrap-input100 validate-input m-b-16" data-validate="Informe o seu nome de usuário">
                    <input class="input100" type="text" name="username" placeholder="Usuário">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Informe a senha">
                    <input class="input100" type="password" name="pass" placeholder="Senha">
                    <span class="focus-input100"></span>
                </div>

                <div class="text-right p-t-13 p-b-23">
                    <span class="txt1">
                        Sair
                    </span>

                    <a href="#" class="txt2">
                        Usuário / Senha?
                    </a>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Entrar
                    </button>
                </div>

                <div class="flex-col-c p-t-170 p-b-40">
                    <span class="txt1 p-b-9">
                        Não tem uma conta ?
                    </span>

                    <a href="#" class="txt3">
                        Crie uma conta.
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
